<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imgbutton_head_his"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_head_history"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_head_his"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            />

        <ImageButton
            android:id="@+id/imgbutton_head_sel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_head_selected"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_head_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            />

        <ImageButton
            android:id="@+id/imgbutton_head_fav"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_head_favorites"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_head_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
             />

        <ImageButton
            android:id="@+id/imgbutton_head_wor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_head_topic_words"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_head_wor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            />

        <ImageButton
            android:id="@+id/imgbutton_head_tim"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_head_time"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_head_tim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="主题" />

        <Button
            android:id="@+id/btn_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="最新VOA" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="搜索" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_pick_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8" />

        <Button
            android:id="@+id/btn_web_parse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="解析" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cache_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缓存新闻" />

        <Button
            android:id="@+id/btn_cache_forums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缓存论坛" />

        <Button
            android:id="@+id/btn_cache_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="缓存清空" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cache_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="缓存进度" />

</LinearLayout>